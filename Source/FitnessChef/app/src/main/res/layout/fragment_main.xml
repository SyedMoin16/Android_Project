<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.innovators.fitnesschef.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500px">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips for a Healthy Life"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="1.Say Hello to water"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/water"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whether you're heading off to spin class, boot camp, or any other exercise, it's always important to hydrate so you can stay energized and have your best workout. "
                android:textStyle="italic"
                android:layout_marginTop="50px" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="2.Find the best fitness friend"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/jogging"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A workout buddy is hugely helpful for keeping motivated, but it's important to find someone who will inspire"
                android:textStyle="italic"
                android:layout_marginTop="50px" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="3.Buy Comfy sneaks"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/nikeshoes"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You shouldn't buy kicks that hurt, bottom line!Your shoes should feel comfortable from the first step"
                android:textStyle="italic"
                android:layout_marginTop="50px" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="4.Pick your perfect tunes"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/music"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Running with music is a great way to get in a groove, just make sure it's not blasting too loudly, or you won't hear those cars!"
                android:textStyle="italic"
                android:layout_marginTop="50px" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="5.When to weigh"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/weightcheck"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You've been following your diet for a whole week. Weigh to go! Now it's time to start tracking your progress.It's best to step on the scale in the morning before eating or drinking—and prior to plunging into your daily activities. Our app Fitness Chef keeps the track of you"
                android:textStyle="italic"
                android:layout_marginTop="50px" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="6.Yoga and Meditation are cure for all problems"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/yoga"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The relaxation techniques incorporated in yoga can lessen chronic pain, such as lower back pain, arthritis, headaches and carpal tunnel syndrome. Increased flexibility. Increased muscle strength and tone."
                android:textStyle="italic"
                android:layout_marginTop="50px" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="7. Savor your carbs"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/carbs"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When trying to slim and trim, you may be tempted to take drastic measures like cutting out your carbs. But before you go and add dinner rolls and chips to your NO list, remember that yummy foods like brown rice, pumpernickel bread, and even potato chips contain."
                android:textStyle="italic"
                android:layout_marginTop="50px" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="8. Eat a high-protein breakfast"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/breakfast"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never skip your breakfast. After a morning workout, protein assists with muscle rebuilding and recovery and helps to keep hunger at bay throughout the day, making to easier to stick to healthy eating plans. Think omelettes, a boiled egg, smoked salmon or Greek yoghurt and berries"
                android:textStyle="italic"
                android:layout_marginTop="50px" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="9. Eat 30-40 minutes after your workout"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/chick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To enhance recovery, protein and carbohydrate are best consumed within 30 to 40 minutes, but you don’t need a special shake or extra snack. Simply having chicken and vegetables or steak and rice for dinner doubles as a workout recovery meal."
                android:textStyle="italic"
                android:layout_marginTop="50px" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="10. An apple a day"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/apple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Getting home ravenous from a hard workout or work can pull you towards the treats jar. Turf them, and if you still really want them after grabbing that apple from the fridge, buy a single, top quality treat."
                android:textStyle="italic"
                android:layout_marginTop="50px" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="11. Reconsider sports drinks"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/sportdrink"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unless you are running a marathon or completing a multi-hour gym workout, sports drinks just add sugary calories and undo workout gains. Stay hydrated with water instead."
                android:textStyle="italic"
                android:layout_marginTop="50px" />









        </LinearLayout>
    </ScrollView>

